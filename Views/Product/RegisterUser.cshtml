@model PizzaApp.Models.User
<link rel="stylesheet" href="~/css/styles.css" />

<h2>Будь ласка, зареєструйтеся для здійсненя замовлення</h2>

<form asp-action="RegisterUser" method="post">
    <div class="form-group">
        <label asp-for="Name">Ім'я:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Прізвище:</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Номер телефону:</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Age">Вік:</label>
        <input asp-for="Age" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Зареєструватися</button>
</form>
